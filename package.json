{
  "name": "node-linux-pam",
  "version": "0.2.2",
  "gypfile": true,
  "description": "Asynchronous PAM authentication for NodeJS",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "install": "node-pre-gyp install --fallback-to-build",
    "lint": "npm run lint:cpplint && npm run lint:prettier",
    "lint:cpplint": "cpplint",
    "lint:prettier": "prettier --check './**/*.{js,json,md,ts}'"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/",
    "cli.js",
    "binding.gyp",
    "pam-error.js",
    "index.d.ts"
  ],
  "bin": {
    "nlp": "./cli.js"
  },
  "binary": {
    "module_name": "node-linux-pam",
    "module_path": "./build/Release/",
    "host": "https://github.com/cartavis",
    "remote_path": "{module_name}/releases/download/v{version}/"
  },
  "cc": {
    "linelength": "120",
    "files": [
      "src/*.cc",
      "src/*.h"
    ],
    "filter": [
      "build/include",
      "build/namespaces",
      "legal/copyright"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cartavis/node-linux-pam.git"
  },
  "bugs": {
    "url": "https://github.com/cartavis/node-linux-pam/issues"
  },
  "homepage": "https://github.com/cartavis/node-linux-pam#readme",
  "keywords": [
    "pam",
    "linux-pam",
    "authentication"
  ],
  "author": "David Aikema <david@idia.ac.za>",
  "license": "MIT",
  "dependencies": {
    "@mapbox/node-pre-gyp": "github:mapbox/node-pre-gyp#v2.0.1",
    "bindings": "1.5.0",
    "node-addon-api": "^8.5.0",
    "string-template": "1.0.0",
    "yargs": "15.4.1"
  },
  "devDependencies": {
    "cc": "3.0.1",
    "jest": "^30.0.5",
    "prettier": "1.19.1"
  }
}
